<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.amelrekkab.mygopigo.MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/Button09"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servo 1" />

            <Button
                android:id="@+id/Button08"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servo 2" />

            <Button
                android:id="@+id/Button07"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servo 3" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn1Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S1 ++ " />

            <Button
                android:id="@+id/btn2Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S2 ++" />

            <Button
                android:id="@+id/btn3Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S3 ++" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn1Moins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S1 -- " />

            <Button
                android:id="@+id/btn2Moins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S2 --" />

            <Button
                android:id="@+id/btn3Moins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S3 --" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/serrvo4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SERVO 4" />

            <Button
                android:id="@+id/serrvo5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servo 5" />

            <Button
                android:id="@+id/serrvo6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Servo 6" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn4Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S4 ++ " />

            <Button
                android:id="@+id/btn5Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S5 ++" />

            <Button
                android:id="@+id/btn6Plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S6 ++" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btn4Moins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S4 -- " />

            <Button
                android:id="@+id/btn5Moins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S5 --" />

            <Button
                android:id="@+id/btn6Moins"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="S6 --" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/ButtonReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.87"
                android:text="VOIR LES STATISTIQUE" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/btnnnn"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btnConnectMan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left|right"
                android:text="DECONNEXION " />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
